<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC00"/> <!-- Yellow color when pressed -->
            <corners android:radius="6dp"/> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F3F3"/> <!-- White color for the default state -->
            <corners android:radius="6dp"/> <!-- Optional: Rounded corners -->
        </shape>
    </item>
</selector>
